<%= render :partial => 'contacts/contact_fields', :locals => { :contact => @employee.contact, :path => 'employee[contact_attributes]', :render_phone_numbers => true } %>
<% if render_contact_choose_link %>
	<p><%= link_to 'Kontaktinformationen von Kunden übernehmen', choose_contact_template_employees_path %></p>
<% end %>

<fieldset>
	<legend>Fähigkeiten</legend>
	<ol id="skills">
		<%= render :partial => 'skills/skill_field', :collection => @employee.skills %>
	</ol>
	<%= add_skill_link %>
</fieldset>

<fieldset>
	<legend>Zusätzliche Informationen</legend>
	<ol>
		<li><%= form.label :comment, 'Kommentar: ' %><%= form.text_area :comment, { :cols => 60, :rows => 15 } %></li>
	</ol>
</fieldset>