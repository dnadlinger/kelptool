<% @page_title = 'Mitarbeiter suchen' -%>

<%= show_errors @search_model, 'die Suchanfrage zu bearbeiten' %>
<% pretty_form_for @search_model, :html => { :class => 'search' } do |f| %>
  <%= render :partial => 'contacts/contact_fields', :object => @search_model.contact, :locals => { :path => 'contact_search', :display => { :phone_numbers => false } } %>
  <fieldset>
    <legend>Fähigkeiten</legend>
    <ol id="skills">
      <%= collection_fields @search_model, :skills, :new_object => Skill.new, :partial_name => 'skills/skill_field', :partial_locals => { :path => 'employee_search', :use_select_menu => true } %>
    </ol>
    <%= link_to_function 'Fähigkeit hinzufügen', 'skillFields.addChild()' %>
  </fieldset>
  <fieldset>
    <legend>Zusätzliche Informationen</legend>
    <ol>
      <li><%= f.label :comment, 'Notizen: ' %><%= f.text_field :comment %></li>
    </ol>
  </fieldset>
  <p><%= f.submit 'Suchen' %> <%= link_to 'Zurück zur Übersicht', employees_path, { :class => 'navlink' } %></p>
<% end %>