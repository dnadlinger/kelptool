<% @page_title = @rental_action.name + ' – Details ' %>
<div>
	<h2>Mietvorgang:</h2>
	<p><strong>Name: </strong><%=h @rental_action.name %></p>
	<p><strong>Zeitraum: </strong><%=h @rental_action.start_date.to_date %> - <%=h @rental_action.end_date.to_date %> (<%=h @rental_action.duration_formatted %>)</p>
</div>
<div>
	<h2>Kunde:</h2>
	<%= render :partial => 'customer_info', :locals => { :customer => @rental_action.customer } %>
	<p><%= link_to 'Kundeninformationen wählen', choose_customer_rental_action_path %></p>
</div>
<div>
	<h2>Geräte:</h2>
	<%= render :partial => 'item_rentals', :locals => { :item_rentals => @rental_action.item_rentals } %>
</div>

<div class="navlinks">
	<p><%= link_to 'Bearbeiten', edit_rental_action_path %></p>
	<p><%= link_to 'Zurück zur Übersicht', rental_actions_path %></p>
</div>