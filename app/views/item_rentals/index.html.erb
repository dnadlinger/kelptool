<% @page_title = 'Geräte für "' + @rental_action.name + '"' -%>

<% unless @item_rentals.empty? -%>
  <table>
    <thead>
      <tr>
        <td>Anzahl</td>
        <td>Gerätename</td>
        <td>Preis</td>
        <td>Ausgegeben</td>
        <td>Zurückgebracht</td>
        <td>Aktionen</td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => 'item_rentals/item_rental', :collection => @item_rentals %>
    </tbody>
    <tfoot>
      <td></td>
      <td>Gesamt</td>
      <td><%=h @rental_action.overall_price %> €</td>
      <td>
        <% if @item_rentals.reject( &:handed_out ).empty? -%>
          ja
        <% else -%>
          <%= link_to 'nein', all_handed_out_rental_action_item_rentals_path, :method => :put %>
        <% end -%>
      </td>
      <td>
        <% if @item_rentals.reject( &:returned ).empty? -%>
          ja
        <% else -%>
          <%= link_to 'nein', all_returned_rental_action_item_rentals_path, :method => :put %>
        <% end -%>
      </td>
      <td></td>
    </tfoot>
  </table>
<% else -%>
  <p><em>(keine)</em></p>
<% end -%>

<div class="navlinks">
  <p><%= link_to 'Gerät zur Liste hinzufügen', choose_item_rental_action_item_rentals_path %></p>
  <p><%= link_to 'Zurück zur Mietaktion', rental_action_path( @rental_action ) %></p>
</div>